

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AdditionalActivity"
    android:background="@drawable/background13">




    <ImageButton
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/imageButtonBack"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_back_m"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLarge"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imageButtonBack"
        android:layout_alignEnd="@+id/scrollView"
        android:layout_toEndOf="@+id/imageButtonBack"
        android:gravity="center"
        android:textColor="#c891ff00"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_below="@+id/imageButtonBack"
        android:id="@+id/scrollView"
        android:layout_marginTop="5dp">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageButtonBack"
        android:id="@+id/tableLayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textIsSelectable="true"
        android:isScrollContainer="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TableRow
            android:layout_height="fill_parent"
            android:id="@+id/tableRow"
            android:layout_width="fill_parent">

            <TextView
                android:id="@+id/tableTime"
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"/>
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tableContent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="false" />

        </TableRow>


    </TableLayout>

</ScrollView>



</RelativeLayout>

